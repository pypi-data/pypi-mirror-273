{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amazon Campaign Report",
    "description": "A JSON object representing a Amazon Campaign Report",
    "type": "object",
    "properties": {
        "merchantID": {
            "type": "string",
            "description": "A unique merchant code for GRAAS clients"
        },
        "siteNickNameId": {
            "type": "string",
            "description": "A unique merchant's store code for GRAAS clients"
        },
        "countryCode": {
            "type": "string",
            "description": "The country code, e.g., 'SG', 'MY'."
        },
        "currencyCode": {
            "type": "string",
            "description": "The currency code, e.g., 'SGD', 'USD'."
        },
        "result": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../graas_utilities/Schema/Amazon_Sponsored_Brands_Campaign_Daily_Report.json",
                        "description": "Amazon Sponsored Brands Campaign Daily Report"
                    },
                    {
                        "$ref": "../graas_utilities/Schema/Amazon_Sponsored_Products_Campaign_Daily_Report.json",
                        "description": "Amazon Sponsored Products Campaign Daily Report"
                    },
                    {
                        "$ref": "../graas_utilities/Schema/Amazon_Sponsored_Display_Campaign_Daily_Report.json",
                        "description": "Amazon Sponsored Display Campaign Daily Report"
                    }
                ]
            }
        }
    },
    "required": [
        "merchantID",
        "siteNickNameId",
        "countryCode",
        "currencyCode",
        "result"
    ]
}