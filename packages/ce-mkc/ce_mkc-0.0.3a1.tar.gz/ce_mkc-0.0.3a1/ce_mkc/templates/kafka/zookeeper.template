  zookeeper:
    image: "confluentinc/cp-zookeeper:{zookeeper_version}"
    container_name: "{zookeeper_container_name}"
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
      KAFKA_JMX_PORT: 9001
      KAFKA_JMX_HOSTNAME: localhost
    ports:
      - 9001:9001
      - 2181:2181